<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag :search_by_title, nil, placeholder: "Search by Title"%>
  <%= text_field_tag :search_by_author, nil, placeholder: "Search by Author" %>
  <%= text_field_tag :search_by_subject , nil, placeholder: "Search by Subject"%>
  Search by Published Before<%= date_field_tag :search_by_published_before %>
  Search by Published After<%= date_field_tag :search_by_published_after %>
  <%= submit_tag 'Search' %>
<% end %>



<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Edition</th>
    <th>Subject</th>
    <th>Published on</th>
    <th>Book Count</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.edition %></td>
      <td><%= book.subject %></td>
      <td><%= book.published %></td>
      <td><%= book.book_count %></td>

      <% if current_user.admin? or current_user.librarian? %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if not current_user.user? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
<%= link_to 'View All Books', books_path %>
<%= link_to 'Back', user_homepage_path %>